<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.tieto.ecommerce.AboutActivity">

    <TextView
        android:id="@+id/app_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="E-commerce Manager"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        app:layout_constraintLeft_toRightOf="@+id/app_image"
        android:layout_marginLeft="8dp"
        app:layout_constraintTop_toTopOf="@+id/app_image"
        android:layout_marginTop="0dp" />

    <TextView
        android:id="@+id/year"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2017"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        android:layout_marginLeft="0dp"
        app:layout_constraintLeft_toLeftOf="@+id/app_name"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/company_name" />

    <TextView
        android:id="@+id/company_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tieto Corp."
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        android:layout_marginLeft="0dp"
        app:layout_constraintLeft_toLeftOf="@+id/app_name"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/app_name" />

    <ImageView
        android:id="@+id/app_image"
        android:layout_width="96dp"
        android:layout_height="102dp"
        app:srcCompat="@mipmap/ic_launcher"
        android:layout_marginLeft="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="78dp" />

</android.support.constraint.ConstraintLayout>
